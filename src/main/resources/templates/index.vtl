<h1>HAIR SALON</h1>

<div class = "row">
<div class = "col-md-6">
<h2>Add a sylist:</h2>

<form action="/stylists" method="post">
  <label for="name">Stylist's name</label>
  <input id="name" name="name" type="text" class = "form-control">
  <br>
  <button type="submit" class="btn btn-primary">Add Stylist</button>
</form>
<br>

<h2>New Client:</h2>

<form action="/clients" method="post">


  <label for="stylistId">Select a Stylist</label>
<select id='stylistId' name='stylistId' type='text'>
  #foreach($stylist in $stylists)
    <option value="$stylist.getId()">$stylist.getName()</option>
  #end
</select>

  <div class="form-group">
    <label for="name">Client Name</label>
    <input id="name" name="name" type="text" class="form-control">
  </div>

  <button type="submit" class="btn btn-primary">Add Client</button>
</form>





</div>

<div class = "col-md-6">
<h2> All Stylists: </h2>

#if($stylists)
  <p>Click on a stylist to see their details:</p>
  <ul>
    #foreach ($stylist in $stylists)
      <li><a href="/stylists/$stylist.getId()">$stylist.getName()</a></li>
    #end
  </ul>
#else
  <p>Your stylist has been successfully deleted!</p>
#end

</div>
</div>
